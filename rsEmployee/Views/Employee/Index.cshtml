@model IEnumerable<rsEmployee.Models.Employee>

@{
    ViewBag.Title = "Employee List";
}

<h2>Employee List</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Date of Birth</th>
        <th>Gender</th>
        <th>Active</th>
    </tr>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.FirstName</td>
            <td>@employee.LastName</td>
            <td>@employee.Email</td>
            <td>@employee.DateOfBirth.ToShortDateString()</td>
            <td>@(employee.IsActive ? "Yes" : "No")</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = employee.EmployeeId }) |
                @Html.ActionLink("Details", "Details", new { id = employee.EmployeeId }) |
                @Html.ActionLink("Delete", "Delete", new { id = employee.EmployeeId })
            </td>
        </tr>
    }
</table>
